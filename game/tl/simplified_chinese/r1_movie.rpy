# game/r1_movie.rpy:128
translate simplified_chinese r1_movie_a84bec5a_1:

    # p "{i}Well, let’s see how it goes.{/i}"
    p "（总之，看了就知道是如何展开的了吧）"

# game/r1_movie.rpy:130
translate simplified_chinese r1_movie_ac8c80e4:

